{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6"
        ],
        "rootDir": "src",
        "outDir": "out",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true, 
        "noImplicitReturns": true, 
        "noFallthroughCasesInSwitch": true, 
        "noUnusedParameters": true,  
        "isolatedModules": true     // Enabled because esbuild requires it.
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}