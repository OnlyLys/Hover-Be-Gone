{
    "name": "hover-be-gone",
    "displayName": "Hover Be Gone",
    "description": "Close hover tooltips like completion and parameter hints together in one `Escape` keypress.",
    "version": "0.2.3",
    "publisher": "OnlyLys",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/OnlyLys/Hover-Be-Gone.git"
    },
    "homepage": "https://github.com/OnlyLys/Hover-Be-Gone",
    "bugs": {
        "url": "https://github.com/OnlyLys/Hover-Be-Gone/issues"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "Close Tooltips",
        "Close Hover",
        "Close Hints",
        "Escape Tooltips",
        "Close Suggestions"
    ],
    "activationEvents": [
        "onCommand:hover-be-gone.closeHoverTooltips"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "hover-be-gone.closeHoverTooltips",
                "category": "Hover Be Gone",
                "title": "Close Hover Tooltips"
            }
        ],
        "keybindings": [
            {
                "key": "escape",
                "command": "hover-be-gone.closeHoverTooltips",
                "when": "parameterHintsVisible && editorTextFocus"
            },
            {
                "key": "escape",
                "command": "hover-be-gone.closeHoverTooltips",
                "when": "suggestWidgetVisible && textInputFocus"
            }
        ]
    },
    "engines": {
        "vscode": "^1.24.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.66",
        "tslint": "^5.8.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.6"
    }
}
